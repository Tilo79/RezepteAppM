<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RezepteApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:RezepteApp.Views"
    Title="RezepteApp"
    Shell.BackgroundColor="White"
    Shell.ForegroundColor="#FF6B82"
    Shell.TabBarBackgroundColor="White"
    Shell.TabBarForegroundColor="#FF6B82">

    <TabBar>
        <ShellContent
            Title="Home"
            Icon="home"
            ContentTemplate="{DataTemplate views:RecipesPage}"
            Route="RecipesPage" />

        <ShellContent
            Title="Einkaufsliste"
            Icon="Einkaufsliste"
            ContentTemplate="{DataTemplate views:ShoppingListPage}"
            Route="ShoppingListPage" />

        <ShellContent
            Title="Favoriten"
            Icon="heart"
            ContentTemplate="{DataTemplate views:FavoritesPage}"
            Route="FavoritesPage" />

        <ShellContent
            Title="Kochbuch"
            Icon="book"
            ContentTemplate="{DataTemplate views:MealPlanPage}"
            Route="MealPlanPage" />
            
        <ShellContent
            Title="Guides"
            Icon="info"
            ContentTemplate="{DataTemplate views:GuidesPage}"
            Route="GuidesPage" />
    </TabBar>

</Shell>
