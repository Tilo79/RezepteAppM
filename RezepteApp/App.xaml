<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:RezepteApp"
             xmlns:converters="clr-namespace:RezepteApp.Converters"
             x:Class="RezepteApp.App"
             UserAppTheme="Light">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <converters:FavoriteIconConverter x:Key="FavoriteIconConverter" />
            <converters:FavoriteTextConverter x:Key="FavoriteTextConverter" />
            <converters:EditModeTitleConverter x:Key="EditModeTitleConverter" />
            <converters:CheckedToStrikethroughConverter x:Key="CheckedToStrikethroughConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
