<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:RezepteApp.ViewModels"
             xmlns:models="clr-namespace:RezepteApp.Models"
             x:Class="RezepteApp.Views.FavoritesPage"
             x:DataType="viewmodels:FavoritesViewModel"
             Title="Favoriten"
             BackgroundColor="#FFFBFC">

    <RefreshView IsRefreshing="{Binding IsRefreshing}"
                 Command="{Binding RefreshCommand}"
                 BackgroundColor="#FFFBFC">
        <CollectionView ItemsSource="{Binding FavoriteRecipes}"
                        Margin="10"
                        BackgroundColor="#FFFBFC">
            <CollectionView.EmptyView>
                <StackLayout Padding="20" VerticalOptions="Center">
                    <Label Text="Keine Favoriten"
                           FontSize="18"
                           HorizontalOptions="Center"
                           TextColor="#757575"/>
                    <Label Text="Markieren Sie Rezepte als Favoriten!"
                           FontSize="14"
                           HorizontalOptions="Center"
                           TextColor="#9B9B9B"
                           Margin="0,10,0,0"/>
                </StackLayout>
            </CollectionView.EmptyView>
            
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Recipe">
                    <ContentView BackgroundColor="#FFFBFC" Padding="0">
                        <Border Margin="0,8" 
                                Padding="16" 
                                BackgroundColor="#FFE8F0"
                                Stroke="Transparent"
                                StrokeThickness="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="16"/>
                            </Border.StrokeShape>
                            <Border.Shadow>
                                <Shadow Brush="#D4C5CA" Offset="0,2" Radius="8" Opacity="0.15"/>
                            </Border.Shadow>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:FavoritesViewModel}}, Path=NavigateToRecipeDetailCommand}"
                                                     CommandParameter="{Binding .}"/>
                            </Border.GestureRecognizers>
                            
                            <Grid ColumnDefinitions="*,Auto">
                                <StackLayout Grid.Column="0">
                                    <Label Text="{Binding Name}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="#4A4A4A"/>
                                    <Label Text="{Binding Description}"
                                           FontSize="14"
                                           TextColor="#757575"
                                           LineBreakMode="TailTruncation"
                                           MaxLines="2"
                                           Margin="0,5,0,0"/>
                                    <HorizontalStackLayout Spacing="15" Margin="0,10,0,0">
                                        <Border BackgroundColor="#FFD8A8" Padding="8,4" StrokeThickness="0" Stroke="Transparent">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="10"/>
                                            </Border.StrokeShape>
                                            <Label Text="{Binding Category}" 
                                                   FontSize="12"
                                                   TextColor="#4A4A4A"/>
                                        </Border>
                                        <Label Text="{Binding TotalTime}" 
                                               FontSize="12"
                                               TextColor="#757575"/>
                                        <Label Text="{Binding RatingDisplay}" 
                                               FontSize="12"
                                               TextColor="#757575"/>
                                    </HorizontalStackLayout>
                                </StackLayout>
                                
                                <Label Grid.Column="1"
                                       Text="❤️"
                                       FontSize="32"
                                       VerticalOptions="Center"/>
                            </Grid>
                        </Border>
                    </ContentView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </RefreshView>

</ContentPage>
