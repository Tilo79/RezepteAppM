<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:RezepteApp.ViewModels"
             xmlns:models="clr-namespace:RezepteApp.Models"
             x:Class="RezepteApp.Views.MealPlanPage"
             x:DataType="viewmodels:MealPlanViewModel"
             Title="Wochenplan"
             BackgroundColor="#FFFBFC">

    <Grid RowDefinitions="Auto,*,Auto" Padding="10">
        <!-- Week Navigation -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" Margin="0,0,0,10">
            <Button Grid.Column="0"
                    Text="◀ Vorherige"
                    Command="{Binding PreviousWeekCommand}"
                    FontSize="12"/>
            <Label Grid.Column="1"
                   Text="{Binding SelectedDate, StringFormat='KW {0:dd.MM.yyyy}'}"
                   FontSize="16"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
            <Button Grid.Column="2"
                    Text="Nächste ▶"
                    Command="{Binding NextWeekCommand}"
                    FontSize="12"/>
        </Grid>

        <!-- Meal Plans List -->
        <RefreshView Grid.Row="1"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}">
            <CollectionView ItemsSource="{Binding WeekMealPlans}">
                <CollectionView.EmptyView>
                    <Label Text="Keine Mahlzeiten geplant"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           TextColor="Gray"/>
                </CollectionView.EmptyView>
                
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:MealPlan">
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Löschen"
                                              BackgroundColor="Red"
                                              Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MealPlanViewModel}}, Path=DeleteMealPlanCommand}"
                                              CommandParameter="{Binding .}"/>
                                </SwipeItems>
                            </SwipeView.RightItems>
                            
                            <Border Margin="0,5" Padding="10" BackgroundColor="White" StrokeThickness="1" Stroke="#E0E0E0">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8"/>
                                </Border.StrokeShape>
                                <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                                    <Label Grid.Row="0" Grid.Column="0"
                                           Text="{Binding DateDisplay}"
                                           FontSize="12"
                                           TextColor="Gray"/>
                                    <Label Grid.Row="1" Grid.Column="0"
                                           Text="{Binding MealType}"
                                           FontSize="14"
                                           FontAttributes="Bold"/>
                                    <Label Grid.Row="2" Grid.Column="0"
                                           Text="{Binding Recipe.Name}"
                                           FontSize="16"
                                           Margin="0,5,0,0"/>
                                    <Button Grid.Row="0" Grid.RowSpan="3" Grid.Column="1"
                                            Text="🗑️"
                                            FontSize="18"
                                            BackgroundColor="Transparent"
                                            TextColor="Red"
                                            WidthRequest="40"
                                            HeightRequest="40"
                                            VerticalOptions="Center"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MealPlanViewModel}}, Path=DeleteMealPlanCommand}"
                                            CommandParameter="{Binding .}"/>
                                </Grid>
                            </Border>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <!-- Add Button -->
        <Button Grid.Row="2"
                Text="+ Mahlzeit hinzufügen"
                Command="{Binding AddMealPlanCommand}"
                BackgroundColor="#4ECDC4"
                Margin="0,10,0,0"/>
    </Grid>

</ContentPage>
