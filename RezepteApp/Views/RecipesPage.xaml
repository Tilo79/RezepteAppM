<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:RezepteApp.ViewModels"
             xmlns:models="clr-namespace:RezepteApp.Models"
             x:Class="RezepteApp.Views.RecipesPage"
             x:DataType="viewmodels:RecipesViewModel"
             Title="Features"
             BackgroundColor="#FFFBFC">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <!-- Page Header -->
            <Label Text="Willkommen in Ihrer Rezepte-App"
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="#4A4A4A"/>
            
            <Label Text="Entdecken Sie köstliche Rezepte und planen Sie Ihre Mahlzeiten"
                   FontSize="18"
                   TextColor="#757575"
                   Margin="0,-10,0,10"/>

            <!-- Recipes Card -->
            <Border BackgroundColor="{StaticResource CardPink}"
                    Padding="20"
                    StrokeThickness="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="{StaticResource Gray400}" Offset="0,4" Radius="15" Opacity="0.15"/>
                </Border.Shadow>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding RefreshCommand}"/>
                </Border.GestureRecognizers>
                
                <Grid ColumnDefinitions="80,*,Auto" RowDefinitions="Auto,Auto,Auto">
                    <!-- Icon Placeholder -->
                    <Border Grid.Row="0" Grid.RowSpan="3"
                            WidthRequest="70"
                            HeightRequest="70"
                            BackgroundColor="#FFB8C5"
                            VerticalOptions="Center"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="15"/>
                        </Border.StrokeShape>
                        <Label Text="🥗"
                               FontSize="36"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>

                    <!-- Content -->
                    <Label Grid.Column="1" Grid.Row="0"
                           Text="Rezepte entdecken"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#4A4A4A"/>
                    
                    <Label Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2"
                           Text="Durchsuchen Sie unsere Sammlung köstlicher Rezepte. Von schnellen Alltagsgerichten bis zu besonderen Festtagsmenüs - hier finden Sie Inspiration für jeden Anlass."
                           FontSize="13"
                           TextColor="#757575"
                           LineBreakMode="WordWrap"
                           MaxLines="3"
                           Margin="0,5,0,0"/>
                    
                    <Label Grid.Column="1" Grid.Row="2"
                           Text="Jetzt entdecken"
                           FontSize="11"
                           TextColor="#9B9B9B"
                           Margin="0,8,0,0"/>
                    
                    <!-- Action Button -->
                    <Border Grid.Column="2" Grid.Row="2"
                            BackgroundColor="{StaticResource AccentCoral}"
                            Padding="12,8"
                            VerticalOptions="End"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="15"/>
                        </Border.StrokeShape>
                        <Label Text="Los geht's"
                               FontSize="12"
                               TextColor="White"
                               FontAttributes="Bold"/>
                    </Border>

                    <!-- Star Icon -->
                    <Label Grid.Column="2" Grid.Row="0"
                           Text="⭐"
                           FontSize="20"
                           HorizontalOptions="End"
                           VerticalOptions="Start"/>
                </Grid>
            </Border>

            <!-- Ingredients List Card -->
            <Border BackgroundColor="{StaticResource CardPeach}"
                    Padding="20"
                    StrokeThickness="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="{StaticResource Gray400}" Offset="0,4" Radius="15" Opacity="0.15"/>
                </Border.Shadow>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToAddRecipeCommand}"/>
                </Border.GestureRecognizers>
                
                <Grid ColumnDefinitions="80,*" RowDefinitions="Auto,Auto,Auto">
                    <!-- Icon -->
                    <Border Grid.Row="0" Grid.RowSpan="3"
                            WidthRequest="70"
                            HeightRequest="70"
                            BackgroundColor="#FFD4A3"
                            VerticalOptions="Center"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="15"/>
                        </Border.StrokeShape>
                        <Label Text="🥕"
                               FontSize="36"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>

                    <Label Grid.Column="1" Grid.Row="0"
                           Text="Einkaufsliste"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#4A4A4A"/>
                    
                    <HorizontalStackLayout Grid.Column="1" Grid.Row="1" Spacing="15" Margin="0,10,0,0">
                        <VerticalStackLayout>
                            <Label Text="Artikel"
                                   FontSize="10"
                                   TextColor="#9B9B9B"/>
                            <Label Text="12 Zutaten"
                                   FontSize="13"
                                   FontAttributes="Bold"
                                   TextColor="#4A4A4A"/>
                        </VerticalStackLayout>
                        
                        <VerticalStackLayout>
                            <Label Text="Status"
                                   FontSize="10"
                                   TextColor="#9B9B9B"/>
                            <Label Text="5 erledigt"
                                   FontSize="13"
                                   FontAttributes="Bold"
                                   TextColor="#4A4A4A"/>
                        </VerticalStackLayout>
                        
                        <Label Text="🔥" FontSize="20" VerticalOptions="Center"/>
                        <Label Text="🛒" FontSize="20" VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                </Grid>
            </Border>

            <!-- Cooking and Ideacipe Card -->
            <Border BackgroundColor="{StaticResource CardLavender}"
                    Padding="20"
                    StrokeThickness="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="{StaticResource Gray400}" Offset="0,4" Radius="15" Opacity="0.15"/>
                </Border.Shadow>
                
                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                    <Label Grid.Column="0" Grid.Row="0"
                           Text="Kochen &amp; Genießen"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#4A4A4A"/>
                    
                    <Label Grid.Column="0" Grid.Row="1"
                           Text="Lernen Sie neue Kochtechniken und kreative Rezeptideen kennen. Schritt-für-Schritt Anleitungen helfen Ihnen dabei."
                           FontSize="13"
                           TextColor="#757575"
                           LineBreakMode="WordWrap"
                           Margin="0,5,0,0"/>
                    
                    <!-- Cooking illustration placeholder -->
                    <Border Grid.Column="1" Grid.RowSpan="2"
                            WidthRequest="120"
                            HeightRequest="90"
                            BackgroundColor="#D8C4E8"
                            VerticalOptions="Center"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="15"/>
                        </Border.StrokeShape>
                        <Label Text="🍳"
                               FontSize="48"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Cooking Card -->
            <Border BackgroundColor="{StaticResource CardBeige}"
                    Padding="20"
                    StrokeThickness="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="{StaticResource Gray400}" Offset="0,4" Radius="15" Opacity="0.15"/>
                </Border.Shadow>
                
                <Grid ColumnDefinitions="80,*,Auto" RowDefinitions="Auto,Auto,Auto,Auto">
                    <!-- Avatar -->
                    <Border Grid.Row="0" Grid.RowSpan="4"
                            WidthRequest="70"
                            HeightRequest="70"
                            BackgroundColor="#F5E6D3"
                            VerticalOptions="Start"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="15"/>
                        </Border.StrokeShape>
                        <Label Text="👩‍🍳"
                               FontSize="36"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>

                    <Label Grid.Column="1" Grid.Row="0"
                           Text="Wochenplanung"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#4A4A4A"/>
                    
                    <Label Grid.Column="1" Grid.Row="1"
                           Text="Planen Sie Ihre Mahlzeiten für die ganze Woche im Voraus."
                           FontSize="13"
                           TextColor="#757575"
                           Margin="0,5,0,0"/>
                    
                    <Label Grid.Column="1" Grid.Row="2"
                           Text="7 Tage Übersicht"
                           FontSize="12"
                           TextColor="#4A4A4A"
                           Margin="0,5,0,0"/>
                    
                    <Label Grid.Column="1" Grid.Row="3"
                           Text="Frühstück • Mittag • Abendessen"
                           FontSize="11"
                           TextColor="#9B9B9B"
                           Margin="0,3,0,0"/>
                    
                    <!-- Action Button -->
                    <Border Grid.Column="2" Grid.Row="3"
                            BackgroundColor="{StaticResource AccentCoral}"
                            Padding="16,16"
                            WidthRequest="48"
                            HeightRequest="48"
                            VerticalOptions="End"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <Ellipse/>
                        </Border.StrokeShape>
                        <Label Text="▶"
                               FontSize="16"
                               TextColor="White"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>

                    <!-- Star Icon -->
                    <Label Grid.Column="2" Grid.Row="0"
                           Text="⭐"
                           FontSize="20"
                           HorizontalOptions="End"
                           VerticalOptions="Start"/>
                </Grid>
            </Border>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
